@{
}

<table class="table">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Category</th>
        <th>Price</th>
        <th>Image</th>
        <th>Rate</th>
        <th>Count</th>
    </tr>
    @foreach (var item in ViewBag.product)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.title</td>
            <td>@item.description</td>
            <td>@item.category</td>
            <td>@item.price</td>
            <td><img src="@item.image" width="100px" height="100px"/></td>
            <td>@item.rating.rate</td>
            <td>@item.rating.count</td>
        </tr>
    }

  
</table>


